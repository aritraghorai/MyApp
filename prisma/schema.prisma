generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma-client"
}

datasource db {
  provider = "sqlite"
}

model User {
  id              String           @id
  name            String
  email           String
  emailVerified   Boolean          @default(false)
  image           String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  sessions        Session[]
  accounts        Account[]
  transactions    Transaction[]
  expenseAccounts ExpenseAccount[]
  tags            Tag[]
  people          Person[]
  categories      Category[]
  dailyNotes      DailyNote[]
  noteHistory     NoteHistory[]
  noteTags        NoteTag[]
  noteTemplates   NoteTemplate[]
  habits          Habit[]
  habitLogs       HabitLog[]
  todoItems       TodoItem[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

enum AccountType {
  CASH
  BANK
  CREDIT_CARD
}

enum TransactionType {
  OUTFLOW // Normal spending
  CC_PAYMENT // Paying the credit card bill
  INCOME // Salary, refunds, etc.
}

model ExpenseAccount {
  id         String      @id @default(uuid())
  name       String      @unique
  type       AccountType
  balance    Decimal     @default(0) // Current balance
  limit      Decimal? // Only for Credit Cards
  closingDay Int? // Day of month statement closes (1-31)
  dueDay     Int? // Day of month payment is due
  userId     String
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions     Transaction[] @relation("Account")
  receivedPayments Transaction[] @relation("FromAccount")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("expense_accounts")
}

model Transaction {
  id          String          @id @default(uuid())
  amount      Decimal
  type        TransactionType @default(OUTFLOW)
  description String?
  date        DateTime        @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  // The account the money is coming FROM
  accountId String
  account   ExpenseAccount @relation("Account", fields: [accountId], references: [id], onDelete: Cascade)

  // The account the money is going TO (Used for CC_PAYMENT)
  fromAccountId String?         @map("fromAccountId")
  fromAccount   ExpenseAccount? @relation("FromAccount", fields: [fromAccountId], references: [id])

  billingCycle String

  personId String?
  person   Person? @relation(fields: [personId], references: [id])

  tags      ExpenseTag[]
  createdAt DateTime     @default(now())

  @@map("transactions")
}

model Tag {
  id          String       @id @default(uuid())
  name        String       @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenseTags ExpenseTag[]

  @@map("tag")
}

model ExpenseTag {
  expenseId     String
  tagId         String
  tag           Tag          @relation(fields: [tagId], references: [id], onDelete: Cascade)
  transaction   Transaction? @relation(fields: [transactionId], references: [id])
  transactionId String?

  @@id([expenseId, tagId])
  @@index([tagId])
  @@map("expense_tag")
}

model Person {
  id           String        @id @default(uuid())
  name         String        @unique
  transactions Transaction[]
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("person")
}

model Category {
  id           String        @id @default(uuid())
  name         String        @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("category")
}

model DailyNote {
  id          String         @id @default(uuid())
  date        DateTime       @unique
  content     String
  mood        Int? // 1-5 scale (1=bad, 5=great)
  wordCount   Int            @default(0)
  hasTemplate Boolean        @default(false)
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  history     NoteHistory[]
  tags        DailyNoteTag[]
  todos       TodoItem[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
  @@map("daily_notes")
}

model NoteHistory {
  id        String    @id @default(uuid())
  noteId    String
  note      DailyNote @relation(fields: [noteId], references: [id], onDelete: Cascade)
  content   String
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())

  @@index([noteId])
  @@index([userId])
  @@map("note_history")
}

// ============================================
// Advanced Notes Features
// ============================================

enum HabitFrequency {
  DAILY
  WEEKLY
  MONTHLY
}

enum TodoPriority {
  LOW
  MEDIUM
  HIGH
}

model NoteTag {
  id        String         @id @default(uuid())
  name      String
  color     String         @default("#3b82f6") // Hex color code
  userId    String
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes     DailyNoteTag[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@unique([userId, name])
  @@index([userId])
  @@map("note_tags")
}

model DailyNoteTag {
  noteId String
  note   DailyNote @relation(fields: [noteId], references: [id], onDelete: Cascade)
  tagId  String
  tag    NoteTag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([noteId, tagId])
  @@index([noteId])
  @@index([tagId])
  @@map("daily_note_tags")
}

model NoteTemplate {
  id        String   @id @default(uuid())
  name      String
  content   String // Template content with variables like {{date}}, {{day}}
  category  String   @default("Custom") // e.g., "Work", "Personal", "Journal"
  isDefault Boolean  @default(false) // System-provided templates
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
  @@index([category])
  @@map("note_templates")
}

model Habit {
  id             String         @id @default(uuid())
  name           String
  description    String?
  color          String         @default("#8b5cf6") // Hex color code
  frequency      HabitFrequency @default(DAILY)
  endDate        DateTime? // Optional end date for time-bound habits
  metadataSchema Json? // Define what metadata fields this habit tracks
  // Example: { "weight": "number", "reps": "number", "sets": "number" }
  userId         String
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs           HabitLog[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@unique([userId, name])
  @@index([userId])
  @@map("habits")
}

model HabitLog {
  id        String   @id @default(uuid())
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  date      DateTime // Date of the habit log
  completed Boolean  @default(false)
  metadata  Json? // Store actual metadata values for this log
  // Example: { "weight": 75.5, "reps": 10, "sets": 3 }
  notes     String? // Optional notes for this log entry
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([habitId, date])
  @@index([habitId])
  @@index([userId])
  @@index([date])
  @@map("habit_logs")
}

model TodoItem {
  id        String       @id @default(uuid())
  noteId    String
  note      DailyNote    @relation(fields: [noteId], references: [id], onDelete: Cascade)
  content   String
  completed Boolean      @default(false)
  priority  TodoPriority @default(MEDIUM)
  position  Int          @default(0) // Order in the list
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@index([noteId])
  @@index([userId])
  @@index([completed])
  @@map("todo_items")
}
